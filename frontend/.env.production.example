# Frontend Environment Configuration for AWS Amplify
# Copy this file to .env.production for production builds

# API Configuration
REACT_APP_API_URL=https://your-api-gateway-url.execute-api.us-east-1.amazonaws.com/prod
REACT_APP_API_VERSION=v1

# AWS Configuration
REACT_APP_AWS_REGION=us-east-1

# Cognito Configuration
REACT_APP_COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
REACT_APP_COGNITO_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
REACT_APP_COGNITO_REGION=us-east-1

# Application Configuration
REACT_APP_NAME=agent2_ingestor
REACT_APP_DESCRIPTION=Document processing system with vector sidecars
REACT_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_MONITORING=true
REACT_APP_ENABLE_UPLOADS=true
REACT_APP_ENABLE_URL_PROCESSING=true

# Storage Configuration
REACT_APP_S3_BUCKET=agent2-ingestor-bucket-us-east-1
REACT_APP_S3_REGION=us-east-1

# Development vs Production
REACT_APP_ENVIRONMENT=production
REACT_APP_DEBUG=false